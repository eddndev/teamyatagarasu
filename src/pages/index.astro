---
import LandingLayout from '../layouts/LandingLayout.astro';
import Hero from '../components/partials/Hero.astro';
import Projects from '../components/partials/Projects.astro';
import About from '../components/partials/About.astro';
import Contact from '../components/partials/Contact.astro';
import Footer from '../components/partials/Footer.astro';
import Svg from '../components/partials/Svg.astro';
---

<LandingLayout>
  <Svg />
  <Hero />
  <Projects />
  <About />
  <Contact />
  <!-- El footer se inserta en el slot correspondiente del Layout -->
  <Footer slot="footer" />
</LandingLayout>

<script is:inline>
  // Importar gsap para animaciones
import { gsap } from 'gsap';
// Importar ScrollTrigger para animaciones al hacer scroll
import { ScrollTrigger } from 'gsap/ScrollTrigger';
// Importar plugins para animaciones de texto
import { TextPlugin } from 'gsap/TextPlugin';
import { SplitText } from 'gsap/SplitText';
// Registrar los plugins con gsap
gsap.registerPlugin(ScrollTrigger, TextPlugin, SplitText);
window.gsap = gsap;
window.ScrollTrigger = ScrollTrigger;
window.TextPlugin = TextPlugin;
window.SplitText = SplitText;
</script>