  { name: "itch.io", url: "https://yasu-dev.itch.io", icon: "M5.4 12.5L10 18l1.6-1.3-3.6-4.7 3.6-4.7L10 6l-4.6 5.5zM18.6 12.5L14 18l-1.6-1.3 3.6-4.7-3.6-4.7L14 6l4.6 5.5z" },
